{
  "name": "acl-arduino-test",
  "displayName": "AC Lab Arduino Test",
  "description": "Pacote de testes automatizados da extensão ACL-Arduino.",
  "version": "0.0.1",
  "publisher": "aclab",
  "author": {
    "name": "Alan Cândido (brodao)",
    "email": "brodao@gmail.com"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.63.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brodao/acl-arduino.git"
  },
  "bugs": {
    "url": "https://github.com/brodao/acl-arduino.git"
  },
  "files": [
    "src",
    "scenario",
    "resources"
  ],
  "type": "commonjs",
  "scripts": {
    "--TEST--": "",
    "compile-test": "tsc -p ./",
    "test": "extest run-tests -l error -f -s ../../temp/test -e ../../temp/extension -o ./test/settings.json './out-test/**/**/*test.js' ",
    "pretest": "rimraf ./out/*  && npm run compile-test",
    "test-setup": "npm run vsce:package && extest setup-tests -i -s ../../temp/test -e ../../temp/extension ",
    "--SCENARIO--": "",
    "scenario:default": "npm run test",
    "scenario:simple": "set SCENARIO=simple && npm run test",
    "--PACKAGE--": "",
    "vsce:package": "cd .. && vsce package --no-git-tag-version --no-update-package-json -o test && cd ./test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "vsce": "^2.6.5",
    "vscode-extension-tester": "4.2.3"
  },
  "dependencies": {
    "chai": "^4.3.6",
    "glob": "^7.2.0",
    "json-merger": "^1.1.7",
    "mocha": "^9.2.0"
  }
}
